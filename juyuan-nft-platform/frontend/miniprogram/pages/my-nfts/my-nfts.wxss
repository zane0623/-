/* 我的NFT页样式 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 60rpx;
}

.prompt-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: linear-gradient(135deg, #22C55E 0%, #16A34A 100%);
  margin: 20rpx;
  padding: 40rpx 0;
  border-radius: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.stat-divider {
  width: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  padding: 10rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: #22C55E;
  color: #fff;
}

/* NFT列表 */
.nft-list {
  padding: 20rpx;
}

.nft-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nft-image {
  width: 200rpx;
  height: 200rpx;
}

.nft-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.nft-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.nft-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.nft-status {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
}

.status-PENDING {
  background: rgba(249, 115, 22, 0.1);
  color: #F97316;
}

.status-DELIVERED {
  background: rgba(34, 197, 94, 0.1);
  color: #22C55E;
}

.nft-token {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.nft-meta {
  display: flex;
  gap: 20rpx;
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.nft-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.nft-quality {
  font-size: 22rpx;
  color: #22C55E;
  background: rgba(34, 197, 94, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.nft-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
}

.action-btn.primary {
  background: #22C55E;
  border-color: #22C55E;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.empty-hint {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

