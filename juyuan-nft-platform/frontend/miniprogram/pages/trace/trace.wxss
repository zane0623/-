/* 溯源查询页样式 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 搜索区域 */
.search-section {
  background: linear-gradient(135deg, #22C55E 0%, #16A34A 100%);
  padding: 40rpx 30rpx 60rpx;
}

.search-box {
  display: flex;
  background: #fff;
  border-radius: 50rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  height: 88rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 160rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #22C55E, #16A34A);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.scan-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
  color: #fff;
  font-size: 28rpx;
}

.scan-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

/* 区块 */
.section {
  margin: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-clear {
  font-size: 26rpx;
  color: #999;
}

/* 最近查询 */
.recent-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.recent-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recent-item:last-child {
  border-bottom: none;
}

.recent-id {
  font-size: 28rpx;
  color: #333;
}

.recent-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 介绍卡片 */
.intro-card {
  padding: 30rpx;
}

.intro-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.intro-item:last-child {
  border-bottom: none;
}

.intro-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.intro-content {
  flex: 1;
}

.intro-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.intro-desc {
  font-size: 24rpx;
  color: #999;
}

/* 使用指南 */
.guide-card {
  padding: 30rpx;
}

.guide-step {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.guide-num {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #22C55E, #16A34A);
  border-radius: 50%;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.guide-step text {
  font-size: 26rpx;
  color: #666;
}

