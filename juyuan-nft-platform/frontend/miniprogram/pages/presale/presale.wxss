/* 预售市场样式 */
.page {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #22C55E, #16A34A);
  color: #fff;
  font-weight: 500;
}

/* 预售列表 */
.presale-scroll {
  flex: 1;
  height: calc(100vh - 120rpx);
}

.presale-grid {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.presale-item {
  width: calc(50% - 10rpx);
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-image-wrap {
  position: relative;
  width: 100%;
  height: 240rpx;
}

.item-image {
  width: 100%;
  height: 100%;
}

.item-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  color: #fff;
}

.tag-active { background: #22C55E; }
.tag-upcoming { background: #F97316; }
.tag-ended { background: #9CA3AF; }

.item-content {
  padding: 20rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-origin,
.item-date {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 4rpx;
}

.item-progress {
  margin: 16rpx 0;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.progress-percent {
  color: #F97316;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #22C55E, #16A34A);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.item-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #22C55E;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #22C55E;
}

.item-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #22C55E, #16A34A);
  color: #fff;
  font-size: 22rpx;
  border-radius: 24rpx;
}

.item-btn.disabled {
  background: #ccc;
}

