WECHAT_MCH_ID=""
WECHAT_API_KEY=""
WECHAT_API_SECRET=""

# 支付宝（可选）
ALIPAY_APP_ID=""
ALIPAY_PRIVATE_KEY=""
ALIPAY_PUBLIC_KEY=""

# AWS S3（可选）
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
